# Camera Inspection Worker Environment Variables
# Copy this file to .env and fill in your values

# Backend API URL
API_BASE_URL=http://localhost:8000

# SendGrid Email Configuration (for alert notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
ALERT_FROM_EMAIL=alerts@intellioptics.com

# Azure Blob Storage (for baseline image storage)
AZURE_BLOB_CONNECTION_STRING=your_azure_blob_connection_string_here
AZURE_BLOB_CONTAINER=camera-baselines

# Optional: Logging level
LOG_LEVEL=INFO
