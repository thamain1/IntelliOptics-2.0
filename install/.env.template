# IntelliOptics 2.0 - Production Environment Configuration
# Copy this file to .env and fill in your values
# Version: v2.0.0

# ====================
# DATABASE (Required)
# ====================
POSTGRES_PASSWORD=<generate-a-secure-password>
POSTGRES_DSN=postgresql://intellioptics:${POSTGRES_PASSWORD}@postgres:5432/intellioptics

# ====================
# AZURE STORAGE (Required)
# ====================
# Azure Storage connection string for image storage
# Get from: Azure Portal > Storage Account > Access Keys
AZURE_STORAGE_CONNECTION_STRING=<your-azure-storage-connection-string>
BLOB_CONTAINER_NAME=intellioptics-images

# ====================
# API SECURITY (Required)
# ====================
# Generate a secure random string (32+ characters)
API_SECRET_KEY=<generate-a-secure-random-string-32-chars-minimum>
API_TOKEN_EXPIRE_MINUTES=10080

# ====================
# AZURE SERVICE BUS (Optional - for async processing)
# ====================
# SERVICE_BUS_CONN=<your-service-bus-connection-string>
# QUEUE_IN=image-queries
# QUEUE_OUT=inference-results

# ====================
# EMAIL ALERTS (Optional)
# ====================
# SENDGRID_API_KEY=<your-sendgrid-api-key>
SENDGRID_FROM_EMAIL=alerts@intellioptics.com

# ====================
# SMS ALERTS (Optional)
# ====================
# TWILIO_ACCOUNT_SID=<your-twilio-account-sid>
# TWILIO_AUTH_TOKEN=<your-twilio-auth-token>
# TWILIO_PHONE_FROM=<your-twilio-phone-number>

# ====================
# APPLICATION SETTINGS
# ====================
APP_ENV=production
LOG_LEVEL=INFO
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost

# ====================
# WORKER SETTINGS
# ====================
# MODEL_URL=<azure-blob-url-to-model>
WORKER_CONCURRENCY=4
WORKER_TIMEOUT=300

# ====================
# ESCALATION SETTINGS
# ====================
AUTO_ESCALATION_THRESHOLD=0.85
OODD_ESCALATION_THRESHOLD=0.5
MAX_ESCALATIONS_PER_HOUR=100
